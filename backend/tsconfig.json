{
  "compilerOptions": {
    "target": "ES2020",                     // Modern JavaScript output
    "module": "commonjs",                   // Required for Node.js/Express
    "outDir": "dist",                       // Compiled files go here
    "rootDir": "src",                       // All source code lives in src/
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Allow default imports from CommonJS
    "skipLibCheck": true,                   // Skip type checking .d.ts files
    "forceConsistentCasingInFileNames": true, // Avoid cross-platform issues
    "resolveJsonModule": true               // Allows importing .json files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
